<h1><%= @user.email %></h1>

<h2>Trucks you own</h2>
<% @user.trucks.each do |truck| %>
  <p><%= truck.name %></p>
<% end %>

<h2>Your Bookings</h2>
<% @user.bookings.each do |booking| %>
  <p><%= booking.truck.name %></p>
  <p><%= booking.start_date %></p>
  <p><%= booking.end_date %></p>
  <br>
<% end %>
